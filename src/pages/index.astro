---
import Card from '../components/Card.astro';

const datos = await fetch('https://kriskraft.eu/datos.json').then((response) =>
  response.json()
);

console.log(datos);
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<link rel="stylesheet" href="./output.css" />

		<title>KRISKRAFT</title>

	</head>
	<body>

		<h1 class="text-blue-900 text-center text-3xl my-10">Bienvenido a KrisKraft</h1> 

		<div class = "mx-auto flex flex-col grid  md:grid-cols-3  lg:grid-cols-4 sm:grid-cols-2 grid-flow-row  gap-8 p-6 my-8 justify-items-center">

			
				{datos.fichas.map(ficha => ( 
					<Card titulo={ficha.titulo} imgurl={ficha.imgurl}/>
				))}
			
			
		</div>
		
	</body>
</html>